<script>
window.addEventListener('load', centerHeader);
window.addEventListener('resize', centerHeader);
        document.addEventListener('DOMContentLoaded', function() {
            // Get all the elements we need
            const navCloser = document.querySelector('.nav-closer');
            const mainNav = document.querySelector('.main-nav');
            const openMenuButtons = document.querySelectorAll('.openMenu');
            
            // Function to toggle menu state
            function toggleMenu() {
                const isOpen = mainNav.classList.contains('opened');
                
                if (isOpen) {
                    // Close the menu
                    navCloser.style.display = 'none';
                    mainNav.classList.remove('opened');
                    mainNav.style.right = '0px';
                    mainNav.style.top = '-100%';
                } else {
                    // Open the menu
                    navCloser.style.display = 'block';
                    mainNav.classList.add('opened');
                    mainNav.style.right = '0px';
                    mainNav.style.top = '72px';
                }
                
                // Update all menu buttons
                openMenuButtons.forEach(button => {
                    // Toggle the activated class
                    button.classList.toggle('activated');
                    
                    // Get the correct image source based on new state
                    const newState = button.classList.contains('activated');
                    const imgSrc = newState ? button.dataset.close : button.dataset.open;
                    
                    // Update the image source
                    const imgElement = button.querySelector('.menu-open');
                    if (imgElement) {
                        imgElement.src = imgSrc;
                        imgElement.alt = newState ? 'close' : 'menu';
                    }
                });
            }
            
            // Add click event to all menu buttons
            openMenuButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    toggleMenu();
                });
            });
            
            // Add click event to nav closer
            navCloser.addEventListener('click', toggleMenu);
            
            // Initially hide the menu and closer
            navCloser.style.display = 'none';
            mainNav.classList.remove('opened');
            mainNav.style.right = '0px';
            mainNav.style.top = '-100%';
            
            // Set initial button states
            openMenuButtons.forEach(button => {
                const isActivated = button.classList.contains('activated');
                const imgSrc = isActivated ? button.dataset.close : button.dataset.open;
                const imgElement = button.querySelector('.menu-open');
                if (imgElement) {
                    imgElement.src = imgSrc;
                    imgElement.alt = isActivated ? 'close' : 'menu';
                }
            });
        });
        </script>
